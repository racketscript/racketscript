#lang racketscript/base

(provide string->color
         color->web-color
         string->web-color
         (rename-out [-color color])
         color?)

(struct color (red green blue [alpha #:auto]) #:auto-value 255 #:transparent)
(define (-color a b c) (color a b c))

(define (string->color color-string)
  ($ *color-table* (string-downcase color-string)))

(define (color->web-color color)
  (string-append "rgba("
                 (color-red color) ","
                 (color-green color) ","
                 (color-blue color) ","
                 (color-alpha color) ")"))

(define (string->web-color str)
  (color->web-color (string->color str)))

